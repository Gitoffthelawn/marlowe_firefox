{
  "manifest_version": 2,

  "name": "Marlowe Objectivity Extension",
  "description": "This extension analyzes the objectivity of given text.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html",
   "default_title": "Marlowe Objectivity"
  },
  "background": { 
    "scripts": ["jquery.js", "background.js"]
  },
  "content_scripts": [ {
    "js": [ "jquery.js", "popup.js" ],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  "permissions": [
   "activeTab",
   "contextMenus"
   ]
}