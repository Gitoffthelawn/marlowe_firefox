{
  "manifest_version": 2,

  "name": "Marlowe Objectivity Extension",
  "description": "This extension will analyze sthe objectivity of selected text.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html",
   "default_title": "Marlowe Objectivity"
  },
  // "background_page": "background.html",
  "content_scripts": [ {
    "js": [ "jquery.js", "popup.js" ],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  "permissions": [
   "activeTab",
   "https://ajax.googleapis.com/"
   ]
}