{
  "manifest_version": 2,

  "name": "Marlowe Objectivity Extension",
  "short_name": "objectivity",
  "description": "This extension analyzes the objectivity of given text.",
  "version": "0.4",
  "author": "Glen Baker <iepathos@gmail.com>",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "offline_enabled": false,

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html",
   "default_title": "Marlowe Objectivity Extension"
  },
  "background": { 
    "scripts": ["jquery.js", "background.js"]
  },
  "content_scripts": [ {
    "js": [ "jquery.js", "popup.js" ],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  "permissions": [
   "activeTab",
   "contextMenus"
   ]
}